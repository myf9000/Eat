= simple_form_for @eat, html: {multipart: true} do |f|
	- if @eat.errors.any?
		#errors
			%h2
				=pluralize(@eat.errors.count, "error")
				prevented this Eat from saving
			%ul
				-@eat.errors.full_messages.each do |msg|
					%li = msg

	.form-group
		= f.input :title, input_html: {class: 'form-control'}

	.form-group
		= f.input :description, input_html: {class: 'form-control'}

	= f.button :submit, class: "btn btn-primary"

